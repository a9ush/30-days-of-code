

n=int(input())
a=[int(x) for x in input().split(" ")]
sort=0
for i in range(0,n):
    for j in range(0,n-1):
        if (a[j]>a[j+1]):
            temp=a[j]
            a[j]=a[j+1]
            a[j+1]=temp
            sort+=1
    if (sort== 0):
        break

            





print("Array is sorted in " +str(sort)+ " swaps.")
print("First Element:",a[0])
print("Last Element:",a[len(a)-1])
